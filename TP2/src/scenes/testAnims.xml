<SCENE>

    <!-- Initial values -->
    <INITIALS>
        <frustum near="0.1" far="500"/>
        <translation x="-1" y="0" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="0.5" sy="0.5" sz="0.5" />
        <reference length="5" />
    </INITIALS>

    <!-- Illumination and clear colour -->
    <ILLUMINATION>
        <ambient r="0.25" g="0.25" b="0.25" a="1" />
    <!-- <background r="0.9" g="0.9" b="0.9" a="1" /> -->
        <background r="0.77" g="0.89" b="0.976" a="1" />
    </ILLUMINATION>

      <!-- Lights -->
    <LIGHTS>
        <LIGHT id="Light 1">
            <enable value ="1" />
            <position x="9.0" y="1.0" z="-0.5" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>

        <LIGHT id="Light 2">
            <enable value ="1" />
            <position x="9.5" y="1.0" z="8.0" w="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>

        <LIGHT id="Light 3">
            <enable value ="1" />
            <position x="-1.0" y="1.0" z="7.5" w="1" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>

        <LIGHT id="Light 4">
            <enable value ="0" />
            <position x="1.0" y="5.0" z="1.0" w="1" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
    </LIGHTS>

    <!-- Textures -->
    <TEXTURES>
        <!-- Conical roofs -->
        <TEXTURE id="tiles">
            <file path="castleTex/tiles.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>

        <TEXTURE id="roofgreen">
            <file path="castleTex/roofgreen.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
    </TEXTURES>

    <MATERIALS>
        <!-- Wall material -->
        <MATERIAL id="carMaterial">
            <shininess value="50" />
            <specular r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1" />
            <ambient r="0.6" g="0.6" b="0.6" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <!-- Yellow material -->
        <MATERIAL id="yellowMaterial">
            <shininess value="50" />
            <specular r="1" g="1" b="0" a="1" />
            <diffuse r="1" g="1" b="0" a="1" />
            <ambient r="1" g="1" b="0" a="1" />
            <emission r="1" g="1" b="0" a="1" />
        </MATERIAL>

        <!-- purple material (91, 59, 21)-->
        <MATERIAL id="floorMaterial">
            <shininess value="50" />
            <specular r="0.356" g="0.231" b="0.082" a="1" />
            <diffuse r="0.356" g="0.231" b="0.082" a="1" />
            <ambient r="0.356" g="0.231" b="0.082" a="1" />
            <emission r="0.356" g="0.231" b="0.082" a="1" />
        </MATERIAL>

        <MATERIAL id="greenMaterial">
            <shininess value="50" />
            <specular r="0" g="1" b="0" a="1" />
            <diffuse r="0" g="1" b="0" a="1" />
            <ambient r="0" g="1" b="0" a="1" />
            <emission r="0" g="1" b="0" a="1" />
        </MATERIAL>

        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
    </MATERIALS>

	<ANIMATIONS>
		<ANIMATION id="circular1" speed="0.003" type="circular"
					centerx="0" centery="0" centerz="0"
					radius="3" startang="90" rotang="360"
		/>

        <ANIMATION id="bezier1" speed="0.003" type="bezier">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="1" yy="0" zz="0" />
            <controlpoint xx="1" yy="0" zz="5" />
            <controlpoint xx="0" yy="0" zz="5" />
		</ANIMATION>

		<ANIMATION id="linear1" speed="0.001" type="linear">
            <controlpoint xx="0" yy="1" zz="0" />
            <controlpoint xx="0" yy="1" zz="3" />
            <controlpoint xx="3" yy="1" zz="3" />
            <controlpoint xx="1" yy="1" zz="1" />
		</ANIMATION>
<!--
		<ANIMATION id="combo1" speed="0.003" type="combo">
            <SPANREF id="circularCombo"/>
			<SPANREF id="bezierCombo"/>
			<SPANREF id="linearCombo"/>
		</ANIMATION>-->
	</ANIMATIONS>

    <!-- The nodes -->
    <NODES>
        <!-- id of root node -->
        <ROOT id="root" />

        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <NODEREF id="floor" />
                <NODEREF id="car" />
                <NODEREF id="circularTest" />
            </DESCENDANTS>
        </NODE>

        <!-- Node with a sphere primitive -->
        <NODE id="circularTest" selectable="true">
            <MATERIAL id="carMaterial" />
            <TEXTURE id="tiles" />

            <ANIMATIONREFS>
                <ANIMATIONREF id="circular1"/>
            </ANIMATIONREFS>

            <DESCENDANTS>
                <LEAF  type="sphere" args="0.5 20 20" />
            </DESCENDANTS>
        </NODE>

        <NODE id="floor">
            <MATERIAL id="floorMaterial" />
            <TEXTURE id="null" />

            <TRANSLATION x="-1" y="0" z="9" />
            <ROTATION axis="x" angle="-90"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0 10 10 0"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="car">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <!--animations-->

            <DESCENDANTS>
                <NODEREF id="rect1"/>
                <NODEREF id="rect2"/>
                <NODEREF id="rect3"/>
                <NODEREF id="rect4"/>
                <NODEREF id="rect5"/>
<!--                <NODEREF id="rect6"/>
                <NODEREF id="rect7"/>
                <NODEREF id="rect8"/>
                <NODEREF id="rect9"/>
                <NODEREF id="rect10"/>
                <NODEREF id="rect11"/>
                <NODEREF id="wheels"/>-->
            </DESCENDANTS>
        </NODE>

        <NODE id="rect1">
            <MATERIAL id="carMaterial" />
            <TEXTURE id="null" />

            <ROTATION axis="y" angle="-90"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0 1 2 0"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="rect3">
            <MATERIAL id="carMaterial" />
            <TEXTURE id="null" />

            <TRANSLATION x="4" y="0" z="2" />
            <ROTATION axis="y" angle="90"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="0 1 2 0"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="rect2">
            <MATERIAL id="carMaterial" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="0" z="2" />

            <DESCENDANTS>
                <LEAF type="rectangle" args="0 1 4 0"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="rect4">
            <MATERIAL id="carMaterial" />
            <TEXTURE id="null" />

            <TRANSLATION x="4" y="0" z="0" />
            <ROTATION axis="y" angle="180" />

            <DESCENDANTS>
                <LEAF type="rectangle" args="0 1 4 0"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="rect5">
            <MATERIAL id="carMaterial" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="1" z="2" />
            <ROTATION axis="x" angle="270" />

            <DESCENDANTS>
                <LEAF type="rectangle" args="0 2 1 0"/>
            </DESCENDANTS>
        </NODE>
    </NODES>

</SCENE>
