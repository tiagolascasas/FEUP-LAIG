<SCENE>

  <!-- Initial values -->
  <INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="0" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.5" sy="0.5" sz="0.5" />
    <reference length="5" />
  </INITIALS>


  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="0.25" g="0.25" b="0.25" a="1" />
    <!-- <background r="0.9" g="0.9" b="0.9" a="1" /> -->
	<background r="0.77" g="0.89" b="0.976" a="1" />
  </ILLUMINATION>


  <!-- Lights -->
  <LIGHTS>
    <LIGHT id="Right tower light">
      <enable value ="1" />
      <position x="9.0" y="1.0" z="-0.5" w="1.0" />
      <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="Front tower light">
      <enable value ="1" />
      <position x="9.5" y="1.0" z="8.0" w="1.0" />
      <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="Left tower light">
      <enable value ="1" />
      <position x="-1.0" y="1.0" z="7.5" w="1" />
      <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="Square tower light">
      <enable value ="0" />
      <position x="1.0" y="5.0" z="1.0" w="1" />
      <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

  </LIGHTS>

  <!-- Textures -->
  <TEXTURES>

    <!-- Conical roofs -->
    <TEXTURE id="tiles">
      <file path="castleTex/tiles.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="roofgreen">
      <file path="castleTex/roofgreen.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

  </TEXTURES>


  <MATERIALS>
    <!-- Wall material -->
    <MATERIAL id="wallMaterial">
      <shininess value="50" />
      <specular r="0.1" g="0.1" b="0.1" a="1" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1" />
      <ambient r="0.6" g="0.6" b="0.6" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
      <shininess value="1" />
      <specular r="0.1" g="0.1" b="0.1" a="1" />
      <diffuse r="0.4" g="0.4" b="0.4" a="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

  </MATERIALS>

	<ANIMATIONS>
		<ANIMATION id="circular1" speed="0.003" type="circular"
					centerx="0" centery="0" centerz="0"
					radius="3" startang="90" rotang="360"
		/>
        <ANIMATION id="bezier1" speed="0.003" type="bezier">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="0" yy="0" zz="1" />
            <controlpoint xx="0" yy="0" zz="1" />
            <controlpoint xx="5" yy="0" zz="0" />
		</ANIMATION>
	</ANIMATIONS>

  <!-- The nodes -->
  <NODES>

	<!-- id of root node -->
    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <NODEREF id="ball" />
        <!--<NODEREF id="ball1" />-->
      </DESCENDANTS>

    </NODE>

    <!-- Node with a sphere primitive -->
    <NODE id="ball">
      <MATERIAL id="wallMaterial" />
      <TEXTURE id="tiles" />

	  <ANIMATIONREFS>
		  <ANIMATIONREF id="circular1"/>
	  </ANIMATIONREFS>

      <!--<TRANSLATION x="0" y="0" z="3" />-->

      <DESCENDANTS>
        <LEAF  type="sphere" args="0.5 20 20" />
      </DESCENDANTS>

    </NODE>

    <NODE id="ball1">
      <MATERIAL id="wallMaterial" />
      <TEXTURE id="roofgreen" />

	  <ANIMATIONREFS>
		  <ANIMATIONREF id="bezier1"/>
	  </ANIMATIONREFS>

      <DESCENDANTS>
        <LEAF  type="sphere" args="0.5 20 20" />
      </DESCENDANTS>

  </NODE>
</NODES>

</SCENE>
