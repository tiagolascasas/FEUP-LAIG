<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g=".3" b="0.9" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="./scenes/images/trunk-image.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>

     <!-- Tree leaves -->
    <TEXTURE id="folhas">
        <file path="images/leaves.jpg" />
        <amplif_factor s="3" t="4" />
    </TEXTURE>

    <!-- Rocks -->
    <TEXTURE id="rocks">
        <file path="images/rocks.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="vidral">
        <file path="images/vidral.jpg" />
        <amplif_factor s="15" t="10" />
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="baliza">
        <file path="./scenes/images/bank.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

</TEXTURES>


<MATERIALS>

	<!-- Baliza material -->
	<MATERIAL id="balizaMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Cone material -->
    <MATERIAL id="coneMaterial">
        <shininess value="100" />
        <specular r="0.9" g="0.1" b="0.1" a="1" />
        <diffuse r="0.9" g="0.1" b="0.1" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Light bulb material -->
    <MATERIAL id="lightMaterial">
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.0" g="0.5" b="0.5" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.2" g="1.0" b="0.2" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>

            <NODEREF id="luzes" />
            <!--<NODEREF id="piramide" /> -->
            <NODEREF id="bola" />
            <NODEREF id="chao" />
            <NODEREF id="balizas" />
        </DESCENDANTS>

    </NODE>

    <!-- The floor -->
    <NODE id="chao">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="rocks" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
				</DESCENDANTS>

    </NODE>

    <!-- The lights -->
     <NODE id="luzes">
        <MATERIAL id="coneMaterial" />
        <TEXTURE id="clear" />

        <DESCENDANTS>
            <NODEREF id="luz1" />
            <NODEREF id="luz2" />
            <NODEREF id="luz3" />
            <NODEREF id="luz4" />
        </DESCENDANTS>

    </NODE>

    <!-- The first light -->
     <NODE id="luz1">
        <MATERIAL id="coneMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="suporte" />
        </DESCENDANTS>

    </NODE>

   <!-- The second light -->
    <NODE id="luz2">
        <MATERIAL id="coneMaterial" />
        <TEXTURE id="null" />

        <TRANSLATION x="30" y="0" z="0" />

        <DESCENDANTS>
            <NODEREF id="suporte" />
        </DESCENDANTS>

    </NODE>

    <!-- The third light -->
    <NODE id="luz3">
        <MATERIAL id="coneMaterial" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="20" />

        <DESCENDANTS>
           <NODEREF id="suporte" />
        </DESCENDANTS>

    </NODE>

    <!-- The fourth light -->
    <NODE id="luz4">
        <MATERIAL id="coneMaterial" />
        <TEXTURE id="null" />

        <TRANSLATION x="30" y="0" z="20" />

        <DESCENDANTS>
           <NODEREF id="suporte" />
        </DESCENDANTS>

    </NODE>

    <!-- suporte -->
    <NODE id="suporte">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
           <NODEREF id="cone" />
           <NODEREF id="luz_suporte" />
        </DESCENDANTS>

    </NODE>

    <!-- cone -->
    <NODE id="cone">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y=".2" z="0" />
        <SCALE sx="1" sy="0.7" sz="1" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
				<LEAF id="cone1" type="cylinder" args="4 1 0 20 20" />
        </DESCENDANTS>

    </NODE>

    <!-- The post in the lamp post... -->
    <NODE id="luz_suporte">
        <MATERIAL id="coneMaterial" />
        <TEXTURE id="null" />
		<TRANSLATION x="-3" y="-0.5" z="-3"/>
        <SCALE sx=".6" sy="0.1" sz=".6" />

        <DESCENDANTS>
					<NODEREF id="faceCubo1" />
					<NODEREF id="faceCubo2" />
					<NODEREF id="faceCubo3" />
					<NODEREF id="faceCubo4" />
					<NODEREF id="faceCubo5" />
					<NODEREF id="faceCubo6" />
        </DESCENDANTS>

    </NODE>



    <!-- Street bench -->
    <NODE id="balizas">
        <MATERIAL id="balizaMaterial" />
        <TEXTURE id="baliza" />
		<SCALE sx="1" sy="2" sz="1"/>
        <DESCENDANTS>
       		<NODEREF id="baliza1" />
            <NODEREF id="baliza2" />
        </DESCENDANTS>

    </NODE>

    <!-- One bench -->
    <NODE id="baliza2">
        <MATERIAL id="balizaMaterial" />
        <TEXTURE id="baliza" />

        <TRANSLATION x="4" y="-2" z="18" />
        <ROTATION axis="y" angle="90"/>

        <DESCENDANTS>
            <NODEREF id="baliza" />
        </DESCENDANTS>

    </NODE>

    <!-- Another bench -->
     <NODE id="baliza1">
        <MATERIAL id="balizaMaterial" />
        <TEXTURE id="null" />

        <TRANSLATION x="26" y="-2" z="3" />

        <ROTATION axis="y" angle="-90"/>

        <DESCENDANTS>
            <NODEREF id="baliza" />
        </DESCENDANTS>

    </NODE>

    <!-- Generic bench -->
    <NODE id="baliza">
        <MATERIAL id="balizaMaterial" />
        <TEXTURE id="null" />

        <ROTATION axis="y" angle="90" />
        <SCALE sx="0.5" sy="0.5" sz="1.5" />

        <DESCENDANTS>

       		<NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
        </DESCENDANTS>

    </NODE>



    <!-- Ball -->
    <NODE id="bola">
        <MATERIAL id="balizaMaterial" />
        <TEXTURE id="trunk" />


        <TRANSLATION x="15" y="1" z="10" />

        <DESCENDANTS>
					<LEAF type="sphere" args="0.7 10 10" />
        </DESCENDANTS>

    </NODE>



    <!-- A cube face -->
    <NODE id="faceCubo1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
     <NODE id="faceCubo2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="2.5" />
		<ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="4" z="7.5" />
		<ROTATION axis="y" angle="90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
 					<LEAF  type="rectangle" args="0 4 5 0" />
       </DESCENDANTS>

    </NODE>

    <!-- Another cube face -->
    <NODE id="faceCubo6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>

</NODES>

</SCENE>
