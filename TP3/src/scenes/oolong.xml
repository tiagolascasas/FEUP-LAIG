<SCENE>

    <!-- Initial values -->
    <INITIALS>
        <frustum near="0.1" far="500"/>
        <translation x="0" y="0" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="3" sy="3" sz="3" />
        <reference length="5" />
    </INITIALS>

    <!-- Illumination and clear colour -->
    <ILLUMINATION>
        <ambient r="0.25" g="0.25" b="0.25" a="1" />
    <!-- <background r="0.9" g="0.9" b="0.9" a="1" /> -->
        <background r="0.77" g="0.89" b="0.976" a="1" />
    </ILLUMINATION>

      <!-- Lights -->
    <LIGHTS>
        <LIGHT id="Light 1">
            <enable value ="1" />
            <position x="-4.0" y="4.0" z="-4.0" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </LIGHT>

        <LIGHT id="Light 2">
            <enable value ="1" />
            <position x="4.0" y="4.0" z="4.0" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </LIGHT>

        <LIGHT id="Light 3">
            <enable value ="1" />
            <position x="-4.0" y="4.0" z="4.0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </LIGHT>

        <LIGHT id="Light 4">
            <enable value ="1" />
            <position x="4.0" y="4.0" z="-4.0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </LIGHT>
    </LIGHTS>

    <!-- Textures -->
    <TEXTURES>
        <TEXTURE id="wood">
            <file path="textures/wood.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
        <TEXTURE id="wood1">
            <file path="textures/wood.jpg" />
            <amplif_factor s="0.1" t="10" />
        </TEXTURE>
        <TEXTURE id="board">
            <file path="textures/board.jpg" />
            <amplif_factor s="1" t="1.06" />
        </TEXTURE>
        <TEXTURE id="porcelain">
            <file path="textures/porcelain.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
        <TEXTURE id="green">
            <file path="textures/green.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
        <TEXTURE id="black">
            <file path="textures/black.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
        <TEXTURE id="table">
            <file path="textures/table.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
        <TEXTURE id="sideboard">
            <file path="textures/sideboard.jpg" />
            <amplif_factor s="2" t="1" />
        </TEXTURE>
        <TEXTURE id="waiter">
            <file path="textures/waiter.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>
    </TEXTURES>

    <MATERIALS>
        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="green">
            <shininess value="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
            <diffuse r="0.0" g="0.6" b="0.0" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="black">
            <shininess value="1" />
            <specular r="0.7" g="0.7" b="0.7" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="white">
            <shininess value="1" />
            <specular r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="metal">
            <shininess value="250" />
            <specular r="0.9" g="0.9" b="0.9" a="1" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="red">
            <shininess value="1" />
            <specular r="1.0" g="0.0" b="0.0" a="1" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1" />
            <ambient r="1.0" g="0.0" b="0.0" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="pink">
            <shininess value="1" />
            <specular r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="1.0" g="0.71" b="0.75" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="sideboard">
            <shininess value="1" />
            <specular r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="flesh">
            <shininess value="1" />
            <specular r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="1" g="0.87" b="0.74" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

    </MATERIALS>

	<ANIMATIONS>

	</ANIMATIONS>

    <!-- The nodes -->
    <NODES>
        <!-- id of root node -->
        <ROOT id="root" />

        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <NODEREF id="table" />
                <!--<NODEREF id="walls" />-->
            </DESCENDANTS>
        </NODE>

        <NODE id="table">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="-0.01" z="0" />
            <SCALE sx="4" sy="0.5" sz="4" />

            <DESCENDANTS>
                <NODEREF id="topOfTable"/>
                <NODEREF id="legs"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="topOfTable">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <NODEREF id="top"/>
                <NODEREF id="bottom"/>
                <NODEREF id="side1"/>
                <NODEREF id="side2"/>
                <NODEREF id="side3"/>
                <NODEREF id="side4"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="top">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="board" />

            <ROTATION axis="x" angle="-90" />

            <DESCENDANTS>
                <NODEREF id="primitiveRectangle"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="bottom">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="wood" />

            <TRANSLATION x="0" y="-0.2" z="0"/>
            <ROTATION axis="x" angle="90" />

            <DESCENDANTS>
                <NODEREF id="primitiveRectangle"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="side1">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="wood1" />

            <TRANSLATION x="0" y="-0.1" z="0.5"/>
            <SCALE sx="1" sy="0.2" sz="1"/>

            <DESCENDANTS>
                <NODEREF id="primitiveRectangle"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="side2">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="wood1" />

            <ROTATION axis="y" angle="180"/>
            <TRANSLATION x="0" y="-0.1" z="0.5"/>
            <SCALE sx="1" sy="0.2" sz="1"/>

            <DESCENDANTS>
                <NODEREF id="primitiveRectangle"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="side3">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="wood1" />

            <ROTATION axis="y" angle="90"/>
            <TRANSLATION x="0" y="-0.1" z="0.5"/>
            <SCALE sx="1" sy="0.2" sz="1"/>

            <DESCENDANTS>
                <NODEREF id="primitiveRectangle"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="side4">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="wood1" />

            <ROTATION axis="y" angle="270"/>
            <TRANSLATION x="0" y="-0.1" z="0.5"/>
            <SCALE sx="1" sy="0.2" sz="1"/>

            <DESCENDANTS>
                <NODEREF id="primitiveRectangle"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="primitiveRectangle" selectable="true">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <LEAF type="rectangle" args="-0.5 0.5 0.5 -0.5"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="legs">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <NODEREF id="leg1"/>
                <NODEREF id="leg2"/>
                <NODEREF id="leg3"/>
                <NODEREF id="leg4"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="leg1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.4" y="0" z="0.4"/>

            <DESCENDANTS>
                <NODEREF id="primitiveCylinder"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="leg2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.4" y="0" z="-0.4"/>

            <DESCENDANTS>
                <NODEREF id="primitiveCylinder"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="leg3">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0.4" y="0" z="-0.4"/>

            <DESCENDANTS>
                <NODEREF id="primitiveCylinder"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="leg4">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0.4" y="0" z="0.4"/>

            <DESCENDANTS>
                <NODEREF id="primitiveCylinder"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="primitiveCylinder" selectable="true">
            <MATERIAL id="metal" />
            <TEXTURE id="null" />

            <SCALE sx="0.4" sy="1" sz="0.4" />
            <TRANSLATION x="0" y="-0.1" z="0"/>
            <ROTATION axis="x" angle="90" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="4 0.05 0.05 20 20 1 1"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="greenPiece">
            <MATERIAL id="green" />
            <TEXTURE id="green" />

            <DESCENDANTS>
                <NODEREF id="piece"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="blackPiece">
            <MATERIAL id="black" />
            <TEXTURE id="black" />

            <DESCENDANTS>
                <NODEREF id="piece"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="piece">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <ROTATION axis="x" angle="-90" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="0.1 0.03 0.05 20 20 0 1"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="dish">
            <MATERIAL id="pink" />
            <TEXTURE id="porcelain" />

            <TRANSLATION x="0" y="0.015" z="0"/>
            <SCALE sx="0.1" sy="0.2" sz="0.1" />
            <ROTATION axis="x" angle="-90" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="0.1 0.3 0.5 20 20 0 1"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="roundTable">
            <MATERIAL id="white" />
            <TEXTURE id="table" />

            <ROTATION axis="x" angle="-90" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="0.01 0.3 0.3 50 50 1 1"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="waiter">
            <MATERIAL id="red" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="0.05" z="0"/>

            <DESCENDANTS>
                <NODEREF id="waiterBall" />
                <NODEREF id="waiterCone" />
            </DESCENDANTS>
        </NODE>

        <NODE id="waiterBall">
            <MATERIAL id="flesh" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="0.23" z="0"/>

            <DESCENDANTS>
                <LEAF type="sphere" args="0.03 20 20"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="waiterCone">
            <MATERIAL id="black" />
            <TEXTURE id="waiter" />

            <TRANSLATION x="0" y="0.0" z="0"/>
            <ROTATION axis="x" angle="-90" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="0.2 0.001 0.03 20 20 0 1"/>
            </DESCENDANTS>
        </NODE>

        <NODE id="sideboard">
            <MATERIAL id="sideboard" />
            <TEXTURE id="sideboard" />

            <TRANSLATION x="-0.2" y="0.001" z="-0.6" />
            <ROTATION axis="y" angle="-90"/>
            <ROTATION axis="x" angle="-90"/>

            <DESCENDANTS>
                <LEAF type="rectangle" args="1.2 0 0 0.4"/>
            </DESCENDANTS>
        </NODE>

    </NODES>

</SCENE>
