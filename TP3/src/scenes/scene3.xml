<SCENE>

    <!-- Textures -->
    <TEXTURES>
        <TEXTURE id="porto_wall">
            <file path="textures/porto_wall.png" />
            <amplif_factor s="6" t="4" />
        </TEXTURE>

        <TEXTURE id="wall">
            <file path="textures/wall_blue.jpg" />
            <amplif_factor s="6" t="4" />
        </TEXTURE>

        <TEXTURE id="green">
            <file path="textures/green.jpg" />
            <amplif_factor s="6" t="4" />
        </TEXTURE>

        <TEXTURE id="ground">
            <file path="textures/whitewood.jpeg" />
            <amplif_factor s="6" t="4" />
        </TEXTURE>

        <TEXTURE id="sofa">
            <file path="textures/sofa.jpg" />
            <amplif_factor s="1" t="1" />
        </TEXTURE>

        <TEXTURE id="hp">
            <file path="textures/hp.jpg" />
            <amplif_factor s="2" t="1" />
        </TEXTURE>
    </TEXTURES>

    <MATERIALS>
        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>

        <MATERIAL id="black">
            <shininess value="1" />
            <specular r="0" g="0.0" b="0.0" a="1" />
            <diffuse r="0" g="0.0" b="0.0" a="1" />
            <ambient r="0" g="0.0" b="0.0" a="1" />
            <emission r="0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
    </MATERIALS>

    <!-- The nodes -->
    <NODES>
        <!-- id of root node -->
        <ROOT id="root" />

        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <NODEREF id = "ground" />
                <NODEREF id = "walls"/>
                <NODEREF id = "sofas" />
                <NODEREF id = "tv_table" />
            </DESCENDANTS>
        </NODE>

        <NODE id = "ground">
            <MATERIAL id = "null" />
            <TEXTURE id = "ground" />

            <ROTATION axis = "x" angle = "-90" />
            <TRANSLATION x = "-6" y = "-7" z = "-2"/>
            <SCALE sx = "2" sy = "3" sz = "0" />

            <DESCENDANTS>
                <NODEREF id = "quadPrimitive" />
            </DESCENDANTS>

        </NODE>

        <NODE id = "walls">
            <MATERIAL id = "null" />
            <TEXTURE id = "wall" />

            <DESCENDANTS>
                <NODEREF id = "wall1" />
                <NODEREF id = "wall2" />
                <NODEREF id = "wall3" />
                <NODEREF id = "wall4" />
            </DESCENDANTS>

        </NODE>

        <NODE id = "wall1">
            <MATERIAL id = "null" />
            <TEXTURE id = "porto_wall" />

            <TRANSLATION x="-6" y="-2" z="-5"/>
            <SCALE sx = "2" sy = "2" sz = "1" />

            <DESCENDANTS>
                <NODEREF id = "quadPrimitive" />
            </DESCENDANTS>
        </NODE>



        <NODE id = "wall2">
            <MATERIAL id = "null" />
            <TEXTURE id = "null" />

            <ROTATION axis = "y" angle = "-90" />
            <TRANSLATION x="-5" y="-2" z="-6"/>
            <SCALE sx = "2" sy = "2" sz = "1" />


            <DESCENDANTS>
                <NODEREF id = "quadPrimitive" />
            </DESCENDANTS>
        </NODE>

        <NODE id = "wall3">
            <MATERIAL id = "null" />
            <TEXTURE id = "null" />

            <ROTATION axis = "y" angle = "90" />
            <TRANSLATION x="-7" y="-2" z="-6"/>
            <SCALE sx = "2" sy = "2" sz = "1" />

            <DESCENDANTS>
                <NODEREF id = "quadPrimitive" />
            </DESCENDANTS>
        </NODE>

        <NODE id = "wall4">
            <MATERIAL id = "null" />
            <TEXTURE id = "null" />

            <ROTATION axis = "y" angle = "180" />
            <TRANSLATION x="-6" y="-2" z="-7"/>
            <SCALE sx = "2" sy = "2" sz = "1" />

            <DESCENDANTS>
                <NODEREF id = "quadPrimitive" />
            </DESCENDANTS>
        </NODE>

        <NODE id = "sofas">
            <MATERIAL id="null" />
            <TEXTURE id="sofa" />

            <DESCENDANTS>
                <NODEREF id="couch1" />
                <NODEREF id="couch2" />
            </DESCENDANTS>

        </NODE>

        <NODE id="couch1">
            <MATERIAL id="null" />
            <TEXTURE id="sofa" />

            <TRANSLATION x="4.3" y="-1.5" z="0"/>

            <DESCENDANTS>
                <NODEREF id="couch_top" />
                <NODEREF id="couch_base" />
                <NODEREF id="couch_side1" />
                <NODEREF id="couch_side_pillow1" />
                <NODEREF id="couch_side2" />
                <NODEREF id="couch_side_pillow2" />
            </DESCENDANTS>
        </NODE>

        <NODE id="couch2">
            <MATERIAL id="null" />
            <TEXTURE id="sofa" />

            <ROTATION axis ="y" angle = "-90"/>
            <TRANSLATION x="5.4" y="-1.5" z="0"/>

            <DESCENDANTS>
                <NODEREF id="couch_top" />
                <NODEREF id="couch_base" />
                <NODEREF id="couch_side1" />
                <NODEREF id="couch_side_pillow1" />
                <NODEREF id="couch_side2" />
                <NODEREF id="couch_side_pillow2" />
            </DESCENDANTS>
        </NODE>

        <NODE id="couch_top">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="1" y="1" z="0" />
            <SCALE sx="1" sy="1" sz="4" />

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="couch_base">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <SCALE sx="3" sy="1" sz="4" />

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="couch_side1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.5" y="0.5" z="2.5" />
            <SCALE sx="2" sy="1" sz="1" />

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="couch_side_pillow1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.5" y="1" z="2" />
            <SCALE sx="1" sy="0.25" sz="0.99" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="1 1 1 20 20 1 1" />
            </DESCENDANTS>
        </NODE>

        <NODE id="couch_side2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.5" y="0.5" z="-2.5" />
            <SCALE sx="2" sy="1" sz="1" />

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="couch_side_pillow2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.5" y="1." z="-3" />
            <SCALE sx="1" sy="0.25" sz="0.99" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="1 1 1 20 20 1 1" />
            </DESCENDANTS>
        </NODE>

        <NODE id="tv_table">
            <MATERIAL id="null" />
            <TEXTURE id="green" />

            <TRANSLATION x="-5.3" y="-2" z="0" />

            <DESCENDANTS>
                <NODEREF id="table_top" />
                <NODEREF id="table_legs" />

                <NODEREF id = "television" />
            </DESCENDANTS>
        </NODE>

        <NODE id="table_top">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="1.2" z="0" />
            <SCALE sx="1.5" sy="0.5" sz="3"/>

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="table_legs">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <NODEREF id="table_legs1" />
                <NODEREF id="table_legs2" />
                <NODEREF id="table_legs3" />
                <NODEREF id="table_legs4" />
            </DESCENDANTS>
        </NODE>

        <NODE id="table_legs1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.3" y="0" z="-1.1" />

            <DESCENDANTS>
                <NODEREF id="table_leg" />
            </DESCENDANTS>
        </NODE>

        <NODE id="table_legs2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0.3" y="0" z="-1.1" />

            <DESCENDANTS>
                <NODEREF id="table_leg" />
            </DESCENDANTS>
        </NODE>

        <NODE id="table_legs3">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="-0.3" y="0" z="1.1" />

            <DESCENDANTS>
                <NODEREF id="table_leg" />
            </DESCENDANTS>
        </NODE>

        <NODE id="table_legs4">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0.3" y="0" z="1.1" />

            <DESCENDANTS>
                <NODEREF id="table_leg" />
            </DESCENDANTS>
        </NODE>

        <NODE id="table_leg">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <SCALE sx="0.2" sy="0.8" sz="0.2" />
            <ROTATION axis="x" angle="-90" />

            <DESCENDANTS>
                <LEAF type="cylinder" args="1.5 1 1 20 20 0 0" />
            </DESCENDANTS>
        </NODE>

        <NODE id="television">
            <MATERIAL id="black" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="2.2" z="0"/>
            <ROTATION axis="y" angle="90" />
            <SCALE sx="1" sy="1.5" sz="1" />

            <DESCENDANTS>
                <NODEREF id="tv_main" />
                <NODEREF id="tv_sec" />
                <NODEREF id="tv_thrd" />
                <NODEREF id="tv_screen" />
            </DESCENDANTS>
        </NODE>

        <NODE id="tv_main">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <SCALE sx="2" sy="1" sz="1" />

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="tv_sec">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="0" z="-0.65"/>
            <SCALE sx="1.8" sy="0.8" sz="0.3" />

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="tv_thrd">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="0" z="-1"/>
            <SCALE sx="1" sy="0.6" sz="0.4" />

            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="tv_screen">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="hp" />

            <TRANSLATION x="0" y="0" z="0.501"/>

            <DESCENDANTS>
                <LEAF  type="rectangle" args="-0.9 0.4 0.9 -0.4" />

            </DESCENDANTS>
        </NODE>



        <NODE id="cube">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <DESCENDANTS>
                <NODEREF id="faceCube1" />
                <NODEREF id="faceCube2" />
                <NODEREF id="faceCube3" />
                <NODEREF id="faceCube4" />
                <NODEREF id="faceCube5" />
                <NODEREF id="faceCube6" />
            </DESCENDANTS>
        </NODE>

        <!-- A cube face -->
        <NODE id="faceCube1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <TRANSLATION x="0" y="0" z="0.5" />

            <DESCENDANTS>
                <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
            </DESCENDANTS>
        </NODE>

        <!-- Another cube face -->
        <NODE id="faceCube2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <ROTATION axis="x" angle="180" />
            <TRANSLATION x="0" y="0" z="0.5" />

            <DESCENDANTS>
                <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
            </DESCENDANTS>
        </NODE>

        <!-- Another cube face -->
        <NODE id="faceCube3">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <ROTATION axis="x" angle="-90" />
            <TRANSLATION x="0" y="0" z="0.5" />

            <DESCENDANTS>
                <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
            </DESCENDANTS>
        </NODE>

        <!-- Another cube face -->
        <NODE id="faceCube4">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <ROTATION axis="x" angle="90" />
            <TRANSLATION x="0" y="0" z="0.5" />

            <DESCENDANTS>
                <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
            </DESCENDANTS>
        </NODE>

        <!-- Another cube face -->
        <NODE id="faceCube5">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <ROTATION axis="y" angle="-90" />
            <TRANSLATION x="0" y="0" z="0.5" />

            <DESCENDANTS>
                <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
            </DESCENDANTS>
        </NODE>

        <!-- Another cube face -->
        <NODE id="faceCube6">
            <MATERIAL id="null" />
            <TEXTURE id="null" />

            <ROTATION axis="y" angle="90" />
            <TRANSLATION x="0" y="0" z="0.5" />

            <DESCENDANTS>
                <LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
            </DESCENDANTS>
        </NODE>

        <NODE id = "quadPrimitive">
            <MATERIAL id = "null" />
            <TEXTURE id = "null" />

            <DESCENDANTS>
                <LEAF type = "rectangle" args="0 4 6 0" />
            </DESCENDANTS>
        </NODE>
    </NODES>

</SCENE>
